#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {

	int i,j;
	int n,t;
	long a,b;
	long c,d;
	//long sqrt;
	 long res = 0;
	scanf("%d",&t);
		
	for(i=0;i<t;i++) {
   	
   	res = 0;
    	 scanf("%d %d",&a,&b);
    	 
    	 c = ceil(sqrt(a));
    	 d = floor(sqrt(b));
    	 
    	 
    	 for(j=c;j<=d;j++) {
    	 	res++;
    	 
    	 }
    	 
    	 printf("%ld\n",res);
  }
	return 0;
}	
